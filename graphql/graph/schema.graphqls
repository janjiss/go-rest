# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type User {
  id: ID!
  email: String!
  name: String!
}

type Query {
  users: [User!]!
}

input CreateUserInput {
  email: String!
  name: String!
}

type CreateUserPayload {
  user: User!
}

input LoginInput {
  email: String!
}

type LoginPayload {
  token: String!
}

type Mutation {
  createUser(input: CreateUserInput!): CreateUserPayload!
  login(input: LoginInput!): LoginPayload!
}

